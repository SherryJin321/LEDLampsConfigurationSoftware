<Window x:Class="LEDLampsConfigurationSoftware.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LEDLampsConfigurationSoftware"
        mc:Ignorable="d"
        Title="航安LED灯具配置软件" Height="716" Width="1205" ResizeMode="NoResize" FontSize="16" Top="0" Loaded="Window_Loaded" Closing="Window_Closing">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Width" Value="130"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="{x:Null}"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition />
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Canvas Grid.Row="0">
            <Image  Height="38" Width="150" Canvas.Right="10" Canvas.Top="0"  Source=".\Images\Airsafe.png" />
            <TabControl Grid.Row="0" Grid.RowSpan="2" Height="626" Canvas.Left="10" Canvas.Top="20" Width="805"  BorderThickness="1" BorderBrush="#FF0A51A1" x:Name="SelectMode">
                <TabItem Header="工厂模式" FontSize="18" Background="AliceBlue" Height="28" Width="110" Margin="0" Padding="0" x:Name="FactoryMode">
                    <Canvas Background="White">
                        <Border BorderBrush="#FF0A51A1" BorderThickness="1" CornerRadius="5" Width="367" Height="443" Canvas.Left="10" Canvas.Top="10">
                            <GroupBox Header="灯具类型选择" FontSize="16" Width="367" Height="443" BorderThickness="0">
                                <Canvas>
                                    <RadioButton x:Name="SelectApproachChenterlineLight" Content="LED嵌入式进近中线灯（APPS-12-LED）" Canvas.Left="10" Canvas.Top="20" BorderBrush="#FF0A51A1" GroupName="SelectLights" Checked="SelectApproachChenterlineLight_Checked" />
                                    <RadioButton x:Name="SelectApproachCrossbarLight" Content="LED嵌入式进近横排灯（APPS-12-LED）" Canvas.Left="10" Canvas.Top="49" BorderBrush="#FF0A51A1" GroupName="SelectLights" Checked="SelectApproachCrossbarLight_Checked" />
                                    <RadioButton x:Name="SelectApproachSideRowLight" Content="LED嵌入式进近侧边灯（APSS-12-LED）" Canvas.Left="10" Canvas.Top="78" BorderBrush="#FF0A51A1" GroupName="SelectLights" Checked="SelectApproachSideRowLight_Checked" />
                                    <RadioButton x:Name="SelectRWYThresholdWingBarLight" Content="LED嵌入式跑道入口翼排灯（THWS-12-LED）" Canvas.Left="10" Canvas.Top="107" BorderBrush="#FF0A51A1" GroupName="SelectLights" Checked="SelectRWYThresholdWingBarLight_Checked" />
                                    <RadioButton x:Name="SelectRWYThresholdLight" Content="LED嵌入式跑道入口灯（THRS-12-LED）" Canvas.Left="10" Canvas.Top="136" BorderBrush="#FF0A51A1" GroupName="SelectLights" Checked="SelectRWYThresholdLight_Checked" />
                                    <RadioButton x:Name="SelectRWYEdgeLight" Content="LED嵌入式跑道边灯（RELS-12-LED）" Canvas.Left="10" Canvas.Top="165" BorderBrush="#FF0A51A1" GroupName="SelectLights" Checked="SelectRWYEdgeLight_Checked" />
                                    <RadioButton x:Name="Select12inchesRWYEndLight" Content="LED嵌入式跑道末端灯（ENDS-12-LED）" Canvas.Left="10" Canvas.Top="194" BorderBrush="#FF0A51A1" GroupName="SelectLights" Checked="Select12inchesRWYEndLight_Checked" />
                                    <RadioButton x:Name="SelectRWYThresholdEndLight" Content="LED嵌入式跑道入口/末端灯（TAES-12-LED）" Canvas.Left="10" Canvas.Top="223" BorderBrush="#FF0A51A1" GroupName="SelectLights" Checked="SelectRWYThresholdEndLight_Checked" />
                                    <RadioButton x:Name="SelectRWYCenterlineLight" Content="LED跑道中线灯（RCLS-08-LED）" Canvas.Left="10" Canvas.Top="252" BorderBrush="#FF0A51A1" GroupName="SelectLights" Checked="SelectRWYCenterlineLight_Checked" />
                                    <RadioButton x:Name="SelectRWYTouchdownZoneLight" Content="LED跑道接地带灯（TDZS-08-LED）" Canvas.Left="10" Canvas.Top="281" BorderBrush="#FF0A51A1" GroupName="SelectLights" Checked="SelectRWYTouchdownZoneLight_Checked" />
                                    <RadioButton x:Name="Select8inchesRWYEndLight" Content="LED嵌入式跑道末端灯（ENDS-08-LED）" Canvas.Left="10" Canvas.Top="310" BorderBrush="#FF0A51A1" GroupName="SelectLights" Checked="Select8inchesRWYEndLight_Checked" />
                                    <RadioButton x:Name="SelectRapidExitTWYIndicatorLight" Content="LED快速出口滑行道指示灯（RAPS-08-LED）" Canvas.Left="10" Canvas.Top="339" BorderBrush="#FF0A51A1" GroupName="SelectLights" Checked="SelectRapidExitTWYIndicatorLight_Checked" />
                                    <RadioButton x:Name="SelectCombinedRWYEdgeLight" Content="LED嵌入式组合跑道边灯（RELC-12-LED）" Canvas.Left="10" Canvas.Top="368" BorderBrush="#FF0A51A1" GroupName="SelectLights" Checked="SelectCombinedRWYEdgeLight_Checked" />

                                </Canvas>
                            </GroupBox>
                        </Border>
                        <Border BorderBrush="#FF0A51A1" BorderThickness="1" CornerRadius="5" Width="222" Height="443" Canvas.Left="397" Canvas.Top="10">
                            <GroupBox Header="特殊灯具选择" FontSize="16" Width="222" Height="443" BorderThickness="0">
                                <Canvas>
                                    <Label x:Name="NoSpecialLight" Content="无特殊灯具！" Canvas.Left="10" Canvas.Top="20" Visibility="Collapsed"/>
                                    <GroupBox x:Name="GroupSpecialLights" Width="201" Height="374" Canvas.Left="0" Canvas.Top="0" BorderThickness="0" Visibility="Collapsed">
                                        <Canvas>
                                            <RadioButton x:Name="SelectSpecialWhiteYellowAllAround" Content="RELC-12-LED-CY-C-1P" Canvas.Left="4" Canvas.Top="20" BorderBrush="#FF0A51A1" GroupName="SelectSpecialLights" Checked="SelectSpecialWhiteYellowAllAround_Checked"/>
                                            <RadioButton x:Name="SelectSpecialWhiteWhiteAllAround" Content="RELC-12-LED-CC-C-1P" Canvas.Left="4" Canvas.Top="49" BorderBrush="#FF0A51A1" GroupName="SelectSpecialLights" Checked="SelectSpecialWhiteWhiteAllAround_Checked"/>
                                            <RadioButton x:Name="SelectSpecialWhiteRedAllAround" Content="RELC-12-LED-CR-C-1P" Canvas.Left="4" Canvas.Top="78" BorderBrush="#FF0A51A1" GroupName="SelectSpecialLights" Checked="SelectSpecialWhiteRedAllAround_Checked"/>
                                            <RadioButton x:Name="SelectSpecialRedYellowAllAround" Content="RELC-12-LED-RY-C-1P" Canvas.Left="4" Canvas.Top="107" BorderBrush="#FF0A51A1" GroupName="SelectSpecialLights" Checked="SelectSpecialRedYellowAllAround_Checked"/>
                                            <RadioButton x:Name="SelectSpecialWhiteYellow" Content="RELC-12-LED-CY-B-1P" Canvas.Left="4" Canvas.Top="136" BorderBrush="#FF0A51A1" GroupName="SelectSpecialLights" Checked="SelectSpecialWhiteYellow_Checked"/>
                                            <RadioButton x:Name="SelectSpecialWhiteWhite" Content="RELC-12-LED-CC-B-1P" Canvas.Left="4" Canvas.Top="165" BorderBrush="#FF0A51A1" GroupName="SelectSpecialLights" Checked="SelectSpecialWhiteWhite_Checked"/>
                                            <RadioButton x:Name="SelectSpecialWhiteRed" Content="RELC-12-LED-CR-B-1P" Canvas.Left="4" Canvas.Top="194" BorderBrush="#FF0A51A1" GroupName="SelectSpecialLights" Checked="SelectSpecialWhiteRed_Checked"/>
                                            <RadioButton x:Name="SelectSpecialRedYellow" Content="RELC-12-LED-RY-B-1P" Canvas.Left="4" Canvas.Top="223" BorderBrush="#FF0A51A1" GroupName="SelectSpecialLights" Checked="SelectSpecialRedYellow_Checked"/>
                                        </Canvas>
                                    </GroupBox>
                                </Canvas>
                            </GroupBox>
                        </Border>
                        <Border BorderBrush="#FF0A51A1" BorderThickness="1" CornerRadius="5" Width="150" Height="443" Canvas.Left="639" Canvas.Top="10">
                            <GroupBox Header="开路选择" FontSize="16" Width="150" Height="443" BorderThickness="0">
                                <Canvas>
                                    <RadioButton x:Name="SelectOpenCircuitTrue" Content="带开路" Canvas.Left="10" Canvas.Top="20" BorderBrush="#FF0A51A1" GroupName="SelectOpenCircuit" Checked="SelectOpenCircuitTrue_Checked"/>
                                    <RadioButton x:Name="SelectOpenCircuitFalse" Content="不带开路" Canvas.Left="10" Canvas.Top="49" BorderBrush="#FF0A51A1" GroupName="SelectOpenCircuit" Checked="SelectOpenCircuitFalse_Checked"/>
                                </Canvas>
                            </GroupBox>
                        </Border>
                        <Label Content="配置参数确认：" FontSize="16" Canvas.Left="10" Canvas.Top="453"/>
                        <Border BorderBrush="#FF0A51A1" BorderThickness="1" CornerRadius="5" Width="130" Height="40" Canvas.Left="10" Canvas.Top="538" Background="AliceBlue">
                            <Button x:Name="SetLightParametersInFactoryMode" Content="参数设置" Click="SetLightParametersInFactoryMode_Click"/>
                        </Border>
                        <Border BorderBrush="#FF0A51A1" BorderThickness="1" CornerRadius="5" Width="367" Height="40" Canvas.Left="10" Canvas.Top="483">
                            <TextBlock x:Name="ConfirmSettingLampParameter" Width="367" Height="40" HorizontalAlignment="Left" Margin="0,0,-2,-2" Padding="10,8,0,0" FontSize="16"/>
                        </Border>
                        <Border BorderBrush="#FF0A51A1" BorderThickness="1" CornerRadius="5" Width="222" Height="40" Canvas.Left="397" Canvas.Top="483">
                            <TextBlock x:Name="ConfirmSettingSpecialLampParameter" Width="222" Height="40" HorizontalAlignment="Left" Margin="0,0,-2,-2" Padding="10,8,0,0" FontSize="16"/>
                        </Border>
                        <Border BorderBrush="#FF0A51A1" BorderThickness="1" CornerRadius="5" Width="150" Height="40" Canvas.Left="639" Canvas.Top="483">
                            <TextBlock x:Name="ConfirmSettingOpenCircuitParameter" Width="150" Height="40" HorizontalAlignment="Left" Margin="0,0,-2,-2" FontSize="16" Padding="10,8,0,0"/>
                        </Border>
                    </Canvas>
                </TabItem>
                <TabItem Header="开发者模式" FontSize="18" Background="AliceBlue" Height="28" Width="110" Margin="-5,0,5,0" Padding="0" Visibility="Collapsed" x:Name="DeveloperMode">
                    <Canvas Background="White">
                        <Label  Content="灯具参数设置" FontSize="16" Canvas.Left="10" Canvas.Top="10"/>
                        <Label  Content="IA:" FontSize="16" Canvas.Left="10" Canvas.Top="50"/>
                        <Label  Content="IB:" FontSize="16" Canvas.Left="10" Canvas.Top="100"/>
                        <Label  Content="IIA:" FontSize="16" Canvas.Left="10" Canvas.Top="150"/>
                        <Label  Content="IIB:" FontSize="16" Canvas.Left="10" Canvas.Top="200"/>
                        <Label  Content="Read-R-Flag:" FontSize="16" Canvas.Left="10" Canvas.Top="260"/>
                        <Label  Content="MOS-Flag:" FontSize="16" Canvas.Left="10" Canvas.Top="300"/>
                        <Label  Content="Break-Flag:" FontSize="16" Canvas.Left="10" Canvas.Top="340"/>
                        <Label  Content="灯具编号：" FontSize="16" Canvas.Left="10" Canvas.Top="380" />
                        <Border BorderBrush="#FF0A51A1" BorderThickness="1" CornerRadius="5" Height="40" Width="130" Canvas.Left="60" Canvas.Top="50">
                            <TextBox x:Name="SetParameterIA" Height="40" TextWrapping="Wrap" Width="130" BorderThickness="0" Background="{x:Null}" TextChanged="SetParameterIA_TextChanged" Padding="10,8,0,0"/>
                        </Border>
                        <Border BorderBrush="#FF0A51A1" BorderThickness="1" CornerRadius="5" Height="40" Width="130" Canvas.Left="60" Canvas.Top="100">
                            <TextBox x:Name="SetParameterIB" Height="40" Width="130" TextWrapping="Wrap" BorderThickness="0" Background="{x:Null}" TextChanged="SetParameterIB_TextChanged" Padding="10,8,0,0"/>
                        </Border>
                        <Border BorderBrush="#FF0A51A1" BorderThickness="1" CornerRadius="5" Height="40" Width="130" Canvas.Left="60" Canvas.Top="150">
                            <TextBox x:Name="SetParameterIIA" Height="40" Width="130" TextWrapping="Wrap" BorderThickness="0" Background="{x:Null}" TextChanged="SetParameterIIA_TextChanged" Padding="10,8,0,0"/>
                        </Border>
                        <Border BorderBrush="#FF0A51A1" BorderThickness="1" CornerRadius="5" Height="40" Width="130" Canvas.Left="60" Canvas.Top="200">
                            <TextBox x:Name="SetParameterIIB" Height="40" Width="130" TextWrapping="Wrap" BorderThickness="0" Background="{x:Null}" TextChanged="SetParameterIIB_TextChanged" Padding="10,8,0,0"/>
                        </Border>
                        <Border BorderBrush="#FF0A51A1" BorderThickness="1" CornerRadius="5" Height="40" Width="437" Canvas.Left="120" Canvas.Top="380" Background="AliceBlue">
                            <ComboBox x:Name="SetLightNumber" Width="433" Height="36" Background="{x:Null}" BorderThickness="0" FontSize="16" SelectionChanged="SetLightNumber_SelectionChanged" SelectedIndex="0" MaxDropDownHeight="130" Padding="10,8,0,0">
                                <ComboBoxItem>01 LED嵌入式进近中线灯（APPS-12-LED）</ComboBoxItem>
                                <ComboBoxItem>02 LED嵌入式进近横排灯（APPS-12-LED）</ComboBoxItem>
                                <ComboBoxItem>03 LED嵌入式进近侧边灯（APSS-12-LED）</ComboBoxItem>
                                <ComboBoxItem>04 LED嵌入式跑道入口翼排灯（THWS-12-LED）</ComboBoxItem>
                                <ComboBoxItem>05 LED嵌入式跑道入口灯（THRS-12-LED）</ComboBoxItem>
                                <ComboBoxItem>06 LED嵌入式跑道边灯（RELS-12-LED）</ComboBoxItem>
                                <ComboBoxItem>07 LED嵌入式跑道末端灯（ENDS-12-LED）</ComboBoxItem>
                                <ComboBoxItem>08 LED嵌入式跑道入口/末端灯（TAES-12-LED）</ComboBoxItem>
                                <ComboBoxItem>09 LED跑道中线灯（RCLS-08-LED）</ComboBoxItem>
                                <ComboBoxItem>10 LED跑道接地带灯（TDZS-08-LED）</ComboBoxItem>
                                <ComboBoxItem>11 LED嵌入式跑道末端灯（ENDS-08-LED）</ComboBoxItem>
                                <ComboBoxItem>12 LED快速出口滑行道指示灯（RAPS-08-LED）</ComboBoxItem>
                                <ComboBoxItem>13 LED嵌入式组合跑道边灯（RELC-12-LED-CY-C-1P）</ComboBoxItem>
                                <ComboBoxItem>14 LED嵌入式组合跑道边灯（RELC-12-LED-CC-C-1P）</ComboBoxItem>
                                <ComboBoxItem>15 LED嵌入式组合跑道边灯（RELC-12-LED-CR-C-1P）</ComboBoxItem>
                                <ComboBoxItem>16 LED嵌入式组合跑道边灯（RELC-12-LED-RY-C-1P）</ComboBoxItem>
                                <ComboBoxItem>17 LED嵌入式组合跑道边灯（RELC-12-LED-CY-B-1P）</ComboBoxItem>
                                <ComboBoxItem>18 LED嵌入式组合跑道边灯（RELC-12-LED-CC-B-1P）</ComboBoxItem>
                                <ComboBoxItem>19 LED嵌入式组合跑道边灯（RELC-12-LED-CR-B-1P）</ComboBoxItem>
                                <ComboBoxItem>20 LED嵌入式组合跑道边灯（RELC-12-LED-RY-B-1P）</ComboBoxItem>
                            </ComboBox>
                        </Border>
                        <RadioButton x:Name="SetReadResistanceFalse" Content="读取电阻" FontSize="16" Canvas.Left="139" Canvas.Top="265" GroupName="ReadResistance" BorderBrush="#FF0A51A1" BorderThickness="1" Checked="SetReadResistanceFalse_Checked" IsChecked="True"/>
                        <RadioButton x:Name="SetReadResistanceTrue" Content="不读取电阻" FontSize="16" Canvas.Left="250" Canvas.Top="265" GroupName="ReadResistance" BorderBrush="#FF0A51A1" BorderThickness="1" Checked="SetReadResistanceTrue_Checked"/>
                        <RadioButton x:Name="SetMosfetTrue" Content="开MOSFET" FontSize="16" Canvas.Left="139" Canvas.Top="305" GroupName="ReadMosfet" BorderBrush="#FF0A51A1" BorderThickness="1" Checked="SetMosfetTrue_Checked"/>
                        <RadioButton x:Name="SetMosfetFalse" Content="不开MOSFET" FontSize="16" Canvas.Left="268" Canvas.Top="305" GroupName="ReadMosfet" BorderBrush="#FF0A51A1" BorderThickness="1" Checked="SetMosfetFalse_Checked" IsChecked="True"/>
                        <RadioButton x:Name="SetBreakTrue" Content="带开路" FontSize="16" Canvas.Left="139" Canvas.Top="345" GroupName="ReadBreak" BorderBrush="#FF0A51A1" BorderThickness="1" Checked="SetBreakTrue_Checked" IsChecked="True"/>
                        <RadioButton x:Name="SetBreakFalse" Content="不带开路" FontSize="16" Canvas.Left="232" Canvas.Top="345" GroupName="ReadBreak" BorderBrush="#FF0A51A1" BorderThickness="1" Checked="SetBreakFalse_Checked"/>
                        <Border BorderBrush="#FF0A51A1" BorderThickness="1" CornerRadius="5" Height="40" Width="130" Canvas.Left="10" Canvas.Top="440" Background="AliceBlue">
                            <Button x:Name="SetLightParametersInDeveloperMode" Content="参数设置" Click="SetLightParametersInDeveloperMode_Click"/>
                        </Border>
                        <Label Content="发送指令：" FontSize="16" Canvas.Left="10" Canvas.Top="500"/>
                        <Border BorderBrush="#FF0A51A1" BorderThickness="1" CornerRadius="5" Height="40" Width="780" Canvas.Left="10" Canvas.Top="540">
                            <TextBlock x:Name="ShowSetParameterCommand" Width="780" Height="40" Padding="10,8,0,0"/>
                        </Border>

                    </Canvas>
                </TabItem>
                <TabItem Header="登录" FontSize="18" Background="AliceBlue" Height="28" Width="110" Margin="-5,0,5,0" Padding="0" x:Name="Login">
                    <Canvas>
                        <Label  Content="账 号：" Canvas.Left="50" Canvas.Top="50" FontSize="16"/>
                        <Label  Content="密 码：" Canvas.Left="50" Canvas.Top="100" FontSize="16"/>
                        <Border BorderBrush="#FF0A51A1" CornerRadius="5" BorderThickness="1" Height="40" Canvas.Left="133" Canvas.Top="50" Width="150">
                            <TextBox x:Name="UserName" Height="40" TextWrapping="Wrap" Width="150" Background="{x:Null}" BorderThickness="0" Padding="10,8,0,0" FontSize="16" />
                        </Border>
                        <Border BorderBrush="#FF0A51A1" CornerRadius="5" BorderThickness="1" Height="40" Canvas.Left="133" Canvas.Top="100" Width="150">
                            <PasswordBox x:Name="Password" Height="40" Width="150" Background="{x:Null}" BorderThickness="0" Padding="10,8,0,0" FontSize="16" PasswordChar="*"/>
                        </Border>
                        <Border BorderBrush="#FF0A51A1" CornerRadius="5" BorderThickness="1" Height="40" Canvas.Left="50" Canvas.Top="170" Width="130" Background="AliceBlue">
                            <Button x:Name="LogIn" Content="登录" Background="{x:Null}" BorderThickness="0" Click="LogIn_Click"/>
                        </Border>
                        <Border BorderBrush="#FF0A51A1" CornerRadius="5" BorderThickness="1" Height="40" Canvas.Left="50" Canvas.Top="230" Width="130" Background="AliceBlue">
                            <Button x:Name="LogOut" Content="退出"  Background="{x:Null}" BorderThickness="0" Click="LogOut_Click"/>
                        </Border>

                       
                    </Canvas>
                </TabItem>


            </TabControl>

        </Canvas>
        <Canvas  Grid.Row="2" >
            <Canvas.Background>
                <RadialGradientBrush>
                    <GradientStop Color="#FF0A51A1" Offset="0.5"/>
                    <GradientStop Color="White" Offset="1"/>
                </RadialGradientBrush>
            </Canvas.Background>
        </Canvas>
        <Canvas  Grid.Row="1" HorizontalAlignment="Right" Width="370">
            <Border BorderBrush="#FF0A51A1" BorderThickness="1" CornerRadius="5" Height="148" Width="350" Canvas.Left="10" Canvas.Top="10">
                <GroupBox Header="串口参数设置" FontSize="16" Width="348" Height="146" BorderThickness="0">
                    <Canvas>
                        <Border BorderBrush="#FF0A51A1" BorderThickness="1" CornerRadius="5" Width="130" Height="40" Canvas.Left="10" Canvas.Bottom="30" Background="{x:Null}">
                            <ComboBox x:Name="PortNameSelect" Width="126" Height="36" BorderThickness="0" FontSize="16" MaxDropDownHeight="130" HorizontalAlignment="Left" Margin="1,1,0,1"  ItemsSource="{Binding pottNames}" Padding="10,8,0,0" DropDownOpened="PortNameSelect_DropDownOpened">
                            </ComboBox>
                        </Border>
                        <Label Content="串口选择：" FontSize="16" Canvas.Left="10" Canvas.Top="10"/>
                        <Border BorderBrush="#FF0A51A1" BorderThickness="1" CornerRadius="5" Width="130" Height="40" Canvas.Right="10" Canvas.Top="10" Background="AliceBlue">
                            <Button x:Name="OpenSerialPort" Content="打开串口" Click="OpenSerialPort_Click"/>
                        </Border>
                        <Border BorderBrush="#FF0A51A1" BorderThickness="1" CornerRadius="5" Width="130" Height="40" Canvas.Right="10" Canvas.Top="70" Background="AliceBlue">
                            <Button x:Name="CloseSerialPort" Content="关闭串口" Click="CloseSerialPort_Click"/>
                        </Border>
                    </Canvas>
                </GroupBox>
            </Border>
            <Border BorderBrush="#FF0A51A1" BorderThickness="1" CornerRadius="5" Height="178" Canvas.Left="10" Canvas.Top="168" Width="350" >
                <GroupBox  Header="灯具版本查询" Width="348" Height="176" FontSize="16" BorderThickness="0">
                    <Canvas>
                        <Label  Content="版本信息：" Canvas.Left="10" Canvas.Top="40"/>
                        <Border BorderBrush="#FF0A51A1" BorderThickness="1" CornerRadius="5" Height="40"  Width="130" Background="AliceBlue" Canvas.Right="10" Canvas.Top="10">
                            <Button x:Name="QueryVersion" Content="版本查询" Click="QueryVersion_Click"/>
                        </Border>
                        <Border BorderBrush="#FF0A51A1" BorderThickness="1" CornerRadius="5" Height="75" Width="316" Canvas.Left="10" Canvas.Top="70">
                            <TextBlock x:Name="AnswerVersion" Height="75" Width="316" Padding="10,5,0,0" TextWrapping="Wrap"/>
                        </Border>
                    </Canvas>
                </GroupBox>
            </Border>
            <Border BorderBrush="#FF0A51A1" BorderThickness="1" CornerRadius="5" Height="250" Width="350" Canvas.Left="10" Canvas.Top="356" >
                <GroupBox Header="灯具状态查询" FontSize="16" Width="348" Height="248" BorderThickness="0">
                    <Canvas>
                        <Border BorderBrush="#FF0A51A1" BorderThickness="1" CornerRadius="5" Height="40" Width="130" Canvas.Right="10" Canvas.Top="10" Background="AliceBlue">
                            <Button Content="状态查询" x:Name="QueryStatus" Click="QueryStatus_Click" />
                        </Border>
                        <Border BorderBrush="#FF0A51A1" BorderThickness="1" CornerRadius="5" Height="40" Width="316" Canvas.Left="10" Canvas.Top="70">
                            <TextBlock x:Name="AnswerStatus" Height="40" Width="316" TextWrapping="Wrap" Margin="-1" Padding="10,8,0,0" />
                        </Border>
                        <Border BorderBrush="#FF0A51A1" BorderThickness="1" CornerRadius="5" Height="40" Width="130" Canvas.Right="10" Canvas.Bottom="10" Background="AliceBlue">
                            <Button Content="导出数据" x:Name="CreatExcel" Click="CreatExcel_Click" />
                        </Border>
                        <Label Content="状态信息：" Canvas.Left="10" Canvas.Top="40"/>
                        <TextBlock Text="说明：若状态信息停止刷新，表明灯具状态查询完成，可导出数据。" Height="50" Width="316" TextWrapping="Wrap" Canvas.Left="10" Canvas.Top="120"/>
                        <Label x:Name="ShowHandleProcess" Canvas.Left="10" Canvas.Bottom="10" Width="150" Height="40" Padding="10,8,0,0" Content="正在导出数据..." Foreground="Red" Visibility="Hidden"/>
                    </Canvas>
                </GroupBox>
            </Border>

        </Canvas>
    </Grid>
</Window>
    
